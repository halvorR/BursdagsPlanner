<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#e2ccd675"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tidspunkt for gratulasjon"
        android:id="@+id/textView"
        android:textColor="#666"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18"
        android:gravity="center_vertical|center_horizontal" />

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_weight="0.06"
        android:layout_gravity="center_vertical" />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_weight="0.5">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:name="meldAvPå"
            android:text="Automatisk melding"
            android:id="@+id/velgAvPå"
            android:layout_weight="0.18"
            android:defaultValue="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:src="@drawable/ic_check_circle_grey_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lagreTid"
            android:id="@+id/lagreTid"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#0000"
            android:contentDescription="Aksepter valg"
            android:layout_gravity="center_horizontal|right" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cancel_grey_36dp"
            android:layout_height="wrap_content"
            android:text="avbrytTid"
            android:id="@+id/avbrytTid"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#0000"
            android:contentDescription="Avbryt valg"
            android:layout_gravity="left|center_horizontal" />
    </GridLayout>


</LinearLayout>