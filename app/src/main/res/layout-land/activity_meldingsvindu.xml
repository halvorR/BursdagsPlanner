<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2ccd675"
    android:padding="15dp"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/meldInfo"
        android:id="@+id/meldingsInfo"
        android:textColor="#666"
        android:layout_weight="0.05"
        android:padding="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:background="#edfd9f"
        android:layout_height="100dp"
        android:id="@+id/meldingTekst" />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_weight="0.8">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:src="@drawable/ic_check_circle_grey_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lagreMeld"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#0000"
            android:contentDescription="@string/akseptDesc"
            android:layout_gravity="center_horizontal|right" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cancel_grey_36dp"
            android:layout_height="wrap_content"
            android:id="@+id/avbrytMeld"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#0000"
            android:contentDescription="@string/avbrytDesc"
            android:layout_gravity="left|center_horizontal" />
    </GridLayout>

</LinearLayout>